function hanoi(r,w,c){var q=$(r);var A=w;var c=c;var g=[20,80,50];if(A%2==1){g=[20,50,80]}var a=["A","C","B"];var p=1.4;var v=Math.ceil((A+c)*p)+2;var h=10;var s=25;q.style.height=v+"em";var f=v+1;var m=["green","red","yellow","blue","orange","purple","black","white"];var b,u;var n,l,i;function k(x,y){var B=parseFloat(x.style.width);return(g[y]-B/2)+"%"}function j(x,y){return(v-(u[y].length+1)*p)+"em"}function o(G,F,C){if(u[G].length<C||(u[F].length!=0&&parseFloat(u[F][u[F].length-1].style.width)<parseFloat(u[G][u[G].length-C].style.width))){return}var x=[];for(var B=0;B<C;B++){var y=u[G].pop();x[B]=y;y.style.top=B*p+"em"}for(var B=0;B<C;B++){var y=x[C-1-B];var E=k(y,F);var D=j(y,F);setTimeout(function(H,I){H.style.left=I}.bind(null,y,E),500);setTimeout(function(H,I){H.style.top=I}.bind(null,y,D),1000);u[F].push(y)}i=true;setTimeout(function(){i=false},1000)}function d(){q.innerHTML="";b=[];for(var y=0;y<3;y++){var C=document.createElement("div");C.className="oszlop";C.style.top=Math.ceil(c*p)+"em";C.style.left=g[y]-1+"%";C.style.width=2+"%";q.appendChild(C);b.push(C)}u=[[],[],[]];for(var y=0;y<A;y++){var B=document.createElement("div");var x=(s-h)/A*(A-y)+h;B.className="korong";B.style.width=x+"%";B.style.height=(p-0.1)+"em";B.style.background=m[y];B.style.left=k(B,0);B.style.top=j(B,0);q.appendChild(B);u[0].push(B)}n=1;l=1;i=false}function t(){if(l!=1){d()}if(n<(1<<A)&&!i){o((n&n-1)%3,((n|n-1)+1)%3,1);n++}return n<(1<<A)}function z(){if(n!=1){d()}switch(l){case 1:o(0,2,A-1);break;case 2:o(0,1,1);break;case 3:o(2,1,A-1);break}l++}function e(){if(t()){setTimeout(e,1500)}}this.start=d;this.kovetkezo=t;this.varazslat=z;this.folyamatos=e}infoc.onloads.push(function(){window.infoc.hanoi1obj=new hanoi("hanoi1",4,3);window.infoc.hanoi1obj.start()});